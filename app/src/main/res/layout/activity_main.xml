<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marim.kidsapp.MainActivity"
    android:background="#cff4f0">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:src="@drawable/kids" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/alphabetBtn"
        android:src="@drawable/alphabet"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageView"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/numBtn"
        android:layout_below="@+id/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/numbers"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/dayBtn"
        android:layout_below="@+id/alphabetBtn"
        android:src="@drawable/days"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/monthBtn"
        android:layout_below="@+id/numBtn"
        android:scaleType="fitXY"
        android:src="@drawable/months"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
